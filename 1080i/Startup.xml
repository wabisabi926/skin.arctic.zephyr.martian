<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <onload>SetProperty(SkinInitStarted,1,home)</onload>
    <onload condition="!Skin.HasSetting(TMDbHelper.Service)">Skin.ToggleSetting(TMDbHelper.Service)</onload>
    <onload>Skin.Reset(TMDbHelper.MonitorContainer)</onload>
    <onload>Skin.SetBool(TMDbHelper.DirectCallAuto)</onload>
    <onload condition="Skin.HasSetting(TMDbHelper.EnableBlur)">RunScript(plugin.video.themoviedb.helper,blur_image='"$VAR[Image_SimpleBackground]"')</onload>
    <onload>RunScript(script.skinvariables,action=buildviews)</onload>
    <onload>ClearProperty(SkinSplashStarted,home)</onload>

    <!-- First start settings -->
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(use.new.jumpbar)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(global.hidecirles)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(show.reflections)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(homemenu.netflix)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(home.modernwidgets)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(home.vertical.widgets)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(home.submenu2)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(home.netflix.clearlogo)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(view.netflix.clearlogo)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(extended.nowplaying)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(disable.only.hide.menu.items)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetString(WidgetLimit,25)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetString(HubLimit,25)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(furniture.flagicons)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(furniture.weatherleft)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(osd.usetheme)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(musicosd.showvideolyrics)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(ShowClearArtOSD)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(ShowClearArtMusicOSD)</onload>
    <onload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(startup.init)</onload>
    <onunload>ClearProperty(StartupReplaceWindow,Home)</onunload>
      
    <!-- Go home -->
    <onload condition="String.IsEmpty(Window(Home).Property(StartupReplaceWindow)) + !Skin.HasSetting(disable.startup.window)">ReplaceWindow(1198)</onload>
    <onload condition="String.IsEmpty(Window(Home).Property(StartupReplaceWindow)) + Skin.HasSetting(disable.startup.window)">ReplaceWindow($INFO[System.StartupWindow])</onload>    
    <onload condition="!String.IsEmpty(Window(Home).Property(StartupReplaceWindow))">ReplaceWindow($INFO[Window(Home).Property(StartupReplaceWindow)])</onload>
    <controls/>
</window>
