<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">1297</defaultcontrol>
    <controls>

        <control type="image">
            <texture colordiffuse="Background">common/white.png</texture>
        </control>

        <control type="image" id="1298">
            <fadetime>800</fadetime>
            <width>1</width>
            <height>1</height>
            <top>-1000</top>
            <left>-1000</left>
            <texture />
        </control>

        <control type="list" id="1297">
            <content sortby="random">$VAR[DefScreensaverWidget]</content>
            <autoscroll time="20000">true</autoscroll>
            <orientation>horizontal</orientation>
            <itemlayout />
            <focusedlayout />
        </control>

        <control type="image">
            <fadetime>800</fadetime>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
            <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
            <animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
        </control>

        <control type="image">
            <visible>!Integer.IsOdd(ListItem.CurrentItem)</visible>
            <texture flipx="false">background/vignetted.png</texture>
            <animation effect="fade" start="0" end="100" time="400">Visible</animation>
            <animation effect="fade" start="100" end="0" time="400">Hidden</animation>
        </control>
        <control type="image">
            <visible>Integer.IsOdd(ListItem.CurrentItem)</visible>
            <texture flipx="true">background/vignetted.png</texture>
            <animation effect="fade" start="0" end="100" time="400">Visible</animation>
            <animation effect="fade" start="100" end="0" time="400">Hidden</animation>
        </control>

        <control type="group">
            <left>SidePad</left>
            <width>680</width>
            <visible>!Integer.IsOdd(ListItem.CurrentItem)</visible>
            <animation effect="fade" start="0" end="100" time="400">Visible</animation>
            <control type="group">
                <bottom>SidePad</bottom>
                <height>490</height>
                <control type="group">
                    <height>280</height>
                    <control type="grouplist">
                        <orientation>vertical</orientation>
                        <align>bottom</align>
                        <height>280</height>
                        <control type="textbox">
                            <font>LargeNetflix</font>
                            <textcolor>PanelWhite100</textcolor>
                            <label>$INFO[Container(1297).ListItem.Title]</label>
                            <height max="270">auto</height>
                            <aligny>center</aligny>
                            <align>center</align>
                            <visible>String.IsEmpty(Container(1297).ListItem.Art(clearlogo))</visible>
                        </control>
                    </control>
                    <control type="image">
                        <texture background="true">$INFO[Container(1297).ListItem.Art(clearlogo)]</texture>
                        <aspectratio aligny="bottom">keep</aspectratio>
                        <visible>!String.IsEmpty(Container(1297).ListItem.Art(clearlogo))</visible>
                    </control>
                </control>
                <control type="grouplist">
                    <height>80</height>
                    <centertop>310</centertop>
		            <orientation>horizontal</orientation>
		            <align>center</align>
		            <itemgap>0</itemgap>
		            <usecontrolcoords>true</usecontrolcoords>
                    <visible>!String.IsEmpty(Container(1297).ListItem.Plot)</visible>
					<include content="Def_Flags_Furniture_Small">
		                <param name="Star" value="ScreensaverFlagstar" />
			            <param name="color" value="$VAR[ColorHighlight]" />
		            </include>                
                </control>
            </control>
            <control type="textbox">
                <font>Tiny</font>
                <textcolor>PanelWhite70</textcolor>
                <label>$INFO[Container(1297).ListItem.Plot]</label>
                <bottom>SidePad</bottom>
                <height>136</height>
                <align>center</align>
            </control>
        </control>

        <control type="group">
            <right>SidePad</right>
            <width>680</width>
            <visible>Integer.IsOdd(ListItem.CurrentItem)</visible>
            <animation effect="fade" start="0" end="100" time="400">Visible</animation>
            <control type="group">
                <bottom>SidePad</bottom>
                <height>490</height>
                <control type="group">
                    <height>280</height>
                    <control type="grouplist">
                        <orientation>vertical</orientation>
                        <align>bottom</align>
                        <height>280</height>
                        <control type="textbox">
                            <font>LargeNetflix</font>
                            <textcolor>PanelWhite100</textcolor>
                            <label>$INFO[Container(1297).ListItem.Title]</label>
                            <height max="270">auto</height>
                            <aligny>center</aligny>
                            <align>center</align>
                            <visible>String.IsEmpty(Container(1297).ListItem.Art(clearlogo))</visible>
                        </control>
                    </control>
                    <control type="image">
                        <texture background="true">$INFO[Container(1297).ListItem.Art(clearlogo)]</texture>
                        <aspectratio aligny="bottom">keep</aspectratio>
                        <visible>!String.IsEmpty(Container(1297).ListItem.Art(clearlogo))</visible>
                    </control>
                </control>
                <control type="grouplist">
                    <height>80</height>
                    <centertop>310</centertop>
		            <orientation>horizontal</orientation>
		            <align>center</align>
		            <itemgap>0</itemgap>
		            <usecontrolcoords>true</usecontrolcoords>
                    <visible>!String.IsEmpty(Container(1297).ListItem.Plot)</visible>
					<include content="Def_Flags_Furniture_Small">
		                <param name="Star" value="ScreensaverFlagstar" />
			            <param name="color" value="$VAR[ColorHighlight]" />
		            </include>                
                </control>
            </control>
            <control type="textbox">
                <font>Tiny</font>
                <textcolor>PanelWhite70</textcolor>
                <label>$INFO[Container(1297).ListItem.Plot]</label>
                <bottom>SidePad</bottom>
                <height>136</height>
                <align>center</align>
            </control>
        </control>
    </controls>
</window>
