<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <backgroundcolor>0</backgroundcolor>
    <menucontrol>9000</menucontrol>
    <include>View_IDs</include>
    <include>Blur_OnLoad_Action</include>
    <include>Generator_BuildViewTypes_Onload</include>
    <controls>
        <include>GlobalBackground</include>
        <include>View_Includes</include>
        <include>Furniture_Header</include>
        <include>Furniture_NowPlaying</include>
        <include>Furniture_Clock</include>
        <include>Furniture_Weather</include>
        <include>Furniture_Flags_Games</include>
        <control type="group">
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            <visible>ControlGroup(9000).HasFocus()</visible>
            <include>GlobalOverlay</include>
        </control>
        <control type="group">
            <height>690</height>
            <include>Def9000Background</include>
            <include>Def9000Arrows</include>
            <include>Def9000Header</include>
            <include content="Def_Gradient_Settings_Image">
                <param name="controlid" value="9000"/>
                <param name="left" value="8"/>
                <param name="top" value="112"/>
                <param name="width" value="450"/>
                <param name="overlayfix" value="true"/>
                <param name="delay" value="20"/>
                <param name="visible" value="!ControlGroup(6150).HasFocus()"/>
            </include>
            <control type="grouplist" id="9000">
                <top>112</top>
                <usecontrolcoords>true</usecontrolcoords>
                <include content="Def9000GroupList"><param name="height" value="560" /></include>
                <scrolltime>0</scrolltime>
                <include>View_Options</include>
                <!-- Other Options -->
                <control type="button" id="55553">
                    <include>DefContextMenuLabel</include>
                    <label>587</label>
                </control>
                <control type="radiobutton" id="11">
                    <description>Unlock Shares</description>
                    <include>DefContextButtonGradient</include>
                    <align>left</align>
                    <label>20336</label>
                    <onclick>mastermode</onclick>
                    <selected>system.ismaster</selected>
                    <visible>system.haslocks</visible>
                </control>
                <control type="edit" id="19">
                    <label>587</label>
                    <description>Filter (hidden)</description>
                    <include>DefContextButtonGradient</include>
                    <visible>!Container.CanFilterAdvanced</visible>
                </control>
                <control type="radiobutton" id="98">
                    <visible>Container.CanFilterAdvanced</visible>
                    <description>Filter</description>
                    <include>DefContextButtonGradient</include>
                    <label>587</label>
                    <align>left</align>
                    <onclick>SetFocus(50)</onclick>
                    <onclick>Filter</onclick>
                    <selected>Container.Filtered</selected>
                </control>
                <control type="button" id="5555">
                    <include>DefContextButtonGradient</include>
                    <align>left</align>
                    <label>31195</label>
                    <onclick>ReloadSkin()</onclick>
                    <visible>Skin.HasSetting(DebugInfo)</visible>
                </control>
                <include>ControlButtons</include>
            </control>
        </control>

        <control type="group">
            <!-- Hidden labels for Game VAR's string checks -->
            <!-- Label ids follow 66xx, starting with 6601 -->
            <visible>false</visible>
            <control type="label" id="6601">
                <label>$VAR[GameResolutionFlag]</label>
            </control>
            <control type="label" id="6602">
                <label>$VAR[GameAudioFlag]</label>
            </control>
            <control type="label" id="6603">
                <label>$VAR[GameYear]</label>
            </control>
        </control>
    </controls>
</window>
