        <control type="group">
            <visible>Skin.HasSetting(508.noscrolling)</visible>
            <left>59</left>
            <height>650</height>
            <width>538</width>
            <control type="label">
                <top>14</top>
                <aligny>center</aligny>
                <height>64</height>
