<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="DialogAddonInfoWIP">
        <control type="group">
            <animation type="Conditional" reversible="true" condition="Window.IsVisible(FileBrowser.xml) | Window.IsVisible(DialogConfirm.xml) | Window.IsVisible(DialogSelect.xml) | Window.IsVisible(DialogContextMenu.xml) | Window.IsVisible(DialogButtonMenu.xml)">
                <effect type="zoom" end="95" start="100" time="200" center="auto" tween="quadratic" easing="in"/>
            </animation>

            <!-- Poster-->
            <control type="group">
                <include>Animation.SidePoster</include>
                <include>View_50_SidePoster_Square</include>
                <include>Animation.AddonFadeOut</include>
            </control>

            <!-- Main -->
            <control type="group">
                <include>Animation.RightSide</include>

                <!-- Control Buttons -->
                <control type="group">
                    <bottom>-80</bottom>
                    <include>Animation.AddonFadeOut</include>
                    <include>DialogAddonInfoNavigation</include>
                </control>

                <!-- Info -->
                <control type="group">
                    <include>Animation.AddonFadeOut</include>
                    <top>86</top>
                    <left>ListSquareX</left>
                    <width>1070</width>
                    <control type="label">
                        <left>30</left>
                        <font>LargeNew</font>
                        <description>Header Label</description>
                        <textcolor>Dark1</textcolor>
                        <label>$INFO[ListItem.AddonName]</label>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <top>64</top>
                        <height>36</height>
                        <font>Tiny</font>
                        <textcolor>Dark1</textcolor>
                        <label fallback="19055">$INFO[ListItem.AddonSummary]</label>
                        <aligny>center</aligny>
                    </control>
                </control>
                <control type="group">
                    <left>ListSquareX</left>
                    <right>SidePad</right>
                    <bottom>224</bottom>
                    <top>DialogInfoTop</top>
                    <control type="grouplist">
                        <include>Animation.AddonFadeOut</include>
                        <left>30</left>
                        <itemgap>0</itemgap>
                        <usecontrolcoords>true</usecontrolcoords>
                        <include content="Def_DialogSquareInfo_Line">
                            <param name="label" value="$LOCALIZE[467]" />
                            <param name="value" value="$INFO[ListItem.AddonType]" />
                        </include>
                        <include content="Def_DialogSquareInfo_Line">
                            <param name="label" value="$LOCALIZE[19114]" />
                            <param name="value" value="$INFO[ListItem.AddonVersion]" />
                        </include>
                        <include content="Def_DialogSquareInfo_Line">
                            <param name="label" value="$LOCALIZE[21863]" />
                            <param name="value" value="$INFO[ListItem.AddonCreator]" />
                        </include>
                        <include content="Def_DialogSquareInfo_Line">
                            <param name="label" value="$LOCALIZE[560]" />
                            <param name="value" value="$INFO[ListItem.Property(Addon.ID)]" />
                        </include>
                        <include content="Def_DialogSquareInfo_Line">
                            <param name="label" value="$LOCALIZE[12014]" />
                            <param name="value" value="$VAR[Label_AddonLastUpdate]" />
                        </include>
                        <include content="Def_DialogSquareInfo_Line">
                            <param name="label" value="$LOCALIZE[31485]" />
                            <param name="value" value="$INFO[ListItem.AddonOrigin]" />
                        </include>
                        <control type="textbox">
                        	<top>15</top>
                            <height>113</height>
                            <font>TinyPlot</font>
                            <textcolor>Dark2</textcolor>
                            <align>justify</align>
                            <label>$INFO[ListItem.AddonDescription]$INFO[ListItem.AddonNews,[CR][CR][B]$LOCALIZE[24036][/B][CR]]</label>
                            <visible>!String.IsEqual(Container(50).NumItems,0)</visible>
                        </control>
                        <control type="textbox">
                        	<top>25</top>
                            <height>396</height>
                            <font>TinyPlot</font>
                            <textcolor>Dark2</textcolor>
                            <align>justify</align>
                            <label>$INFO[ListItem.AddonDescription]$INFO[ListItem.AddonNews,[CR][CR][B]$LOCALIZE[24036][/B][CR]]</label>
                            <visible>String.IsEqual(Container(50).NumItems,0)</visible>
                        </control>
                    </control>
                    <control type="group">
                        <top>865</top>
                        <left>33</left>
                        <include content="AddonImageList">
                            <param name="arrowleft" value="-12"/>
                            <param name="arrowtop" value="342"/>
                            <param name="arrowright" value="87"/>
                            <param name="visi" value="String.IsEqual(Window.Property(content),1)"/>
                            <param name="animation" value="Animation.addoninfo"/>
                            <param name="fallbackpicture" value="DefaultAddonImages.png"/>
                            <param name="controlid" value="50"/>
                            <param name="focusposition" value="1"/>
                            <param name="listbottom" value="30"/>
                            <param name="listleft" value="-800"/>
                            <param name="height" value="349"/>
                            <param name="width" value="370"/>
                            <param name="headerbottom" value="710"/>
                            <param name="headerleft" value="-10"/>
                            <param name="zoom" value="130"/>
                            <param name="labelbottom" value="-90"/>
                            <param name="labelleft" value="-20"/>
                            <param name="labeltwovisible" value="false"/>
                            <param name="labeltwobottom" value="-90"/>
                            <param name="labeltwoleft" value="-30"/>
                        </include>
                    </control>
                </control>
                <control type="label">
                    <right>83</right>
                    <bottom>100</bottom>
                    <height>50</height>
                    <font>Mini</font>
                    <scroll>false</scroll>
                    <textcolor>Dark3</textcolor>
                    <label>$VAR[DialogInfoLabel]</label>
                    <aligny>center</aligny>
                    <align>right</align>
                    <visible>ControlGroup(9000).HasFocus()</visible>
                    <include>Animation.FadeIn</include>
                    <include>Animation.FadeOut</include>
                </control>
            </control>
        </control>
    </include>

    <include name="DialogAddonInfoNavigation">
        <control type="grouplist" id="9000">
            <bottom>224</bottom>
            <left>783</left>
            <right>SidePad</right>
            <include>listdimensions</include>
            <ondown>9601</ondown>
            <onup condition="Integer.IsEqual(Container(50).NumItems,0)">9601</onup>
            <onup condition="Integer.IsGreater(Container(50).NumItems,0)">SetProperty(content,1)</onup>
            <onup condition="Integer.IsGreater(Container(50).NumItems,0)">50</onup>
            <orientation>horizontal</orientation>
            <control type="radiobutton" id="12">
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/launch.png" />
                </include>
                <visible>Control.IsEnabled(12)</visible>
            </control>
            <control type="radiobutton" id="6">
                <textureradioonfocus colordiffuse="FFFFFFFF">buttonsdialogs/uninstall.png</textureradioonfocus>
                <textureradioonnofocus colordiffuse="FFFFFFFF">buttonsdialogs/uninstall.png</textureradioonnofocus>
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/install.png" />
                </include>
                <visible>!Skin.HasSetting(global.kioskmode)</visible>
                <visible>Control.IsEnabled(6)</visible>
                <selected>ListItem.Property(addon.isinstalled) | !Window.IsActive(addonbrowser)</selected>
            </control>
            <control type="radiobutton" id="7">
                <textureradioonfocus colordiffuse="FFFFFFFF">buttonsdialogs/disable.png</textureradioonfocus>
                <textureradioonnofocus colordiffuse="FFFFFFFF">buttonsdialogs/disable.png</textureradioonnofocus>
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/enabled.png" />
                </include>
                <visible>!Skin.HasSetting(global.kioskmode)</visible>
                <visible>Control.IsEnabled(7)</visible>
                <selected>!String.StartsWith(Control.GetLabel(7),$LOCALIZE[24022]) | !Window.IsActive(addonbrowser)</selected>
            </control>
            <control type="radiobutton" id="9">
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/configure.png" />
                </include>
                <visible allowhiddenfocus="true">Control.IsEnabled(9)</visible>
            </control>
            <control type="radiobutton" id="8">
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/install.png" />
                </include>
                <visible>Control.IsEnabled(8)</visible>
            </control>
            <control type="radiobutton" id="14">
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/update.png" />
                </include>
                <visible>Control.IsEnabled(14)</visible>
            </control>
            <control type="radiobutton" id="13">
                <textureradioonfocus colordiffuse="FFFFFFFF">buttonsdialogs/autoupdateon.png</textureradioonfocus>
                <textureradioonnofocus colordiffuse="FFFFFFFF">buttonsdialogs/autoupdateon.png</textureradioonnofocus>
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/autoupdate.png" />
                </include>
                <visible>!Skin.HasSetting(global.kioskmode)</visible>
                <visible>Control.IsEnabled(13)</visible>
            </control>
            <control type="radiobutton" id="10">
                <include content="DefInfoButtons">
                    <param name="icon" value="buttonsdialogs/dependency.png" />
                </include>
                <visible>Control.IsEnabled(10)</visible>
            </control>
        </control>
    </include>

</includes>
