    <include name="View_52_Thumbnail_Image">
		<control type="group">
			<visible>!String.IsEqual(ListItem.DBType,studio) + !String.IsEqual(ListItem.DBType,genre)</visible>
	        <control type="image">
	            <left>10</left>
	            <top>10</top>
	            <width>100</width>
	            <height>100</height>
	            <aspectratio scalediffuse="false">scale</aspectratio>
	            <texture diffuse="common/circle.png" background="true">$VAR[PosterImage]</texture>
	            <visible>!Skin.HasSetting(global.hidecirles)</visible>
	        </control>
	        <control type="image">
	            <left>10</left>
	            <top>10</top>
	            <width>100</width>
	            <height>100</height>
	            <aspectratio scalediffuse="false">scale</aspectratio>
	            <texture background="true">$VAR[PosterImage]</texture>
	            <visible>Skin.HasSetting(global.hidecirles)</visible>
	        </control>
        </control>
		<control type="group">
			<visible>String.IsEqual(ListItem.DBType,studio)</visible>
	        <control type="image">
	            <left>10</left>
	            <top>10</top>
	            <width>100</width>
	            <height>100</height>
	            <aspectratio scalediffuse="false">keep</aspectratio>
	            <texture diffuse="common/circle.png" background="true" fallback="DefaultStudios.png">$VAR[ThumbImageStudios]</texture>
	            <visible>!Skin.HasSetting(global.hidecirles)</visible>
	        </control>
	        <control type="image">
	            <left>10</left>
	            <top>10</top>
	            <width>100</width>
	            <height>100</height>
	            <aspectratio scalediffuse="false">keep</aspectratio>
	            <texture background="true" fallback="DefaultStudios.png">$VAR[ThumbImageStudios]</texture>
	            <visible>Skin.HasSetting(global.hidecirles)</visible>
	        </control>
        </control>
		<control type="group">
