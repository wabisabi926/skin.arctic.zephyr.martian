<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

    <include name="View_52_BigList">
        <include>View_52_BigList_SinglePane</include>
    </include>

    <include name="View_52_BigList_SinglePane">
        <description>List View (id=52)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(52)</visible>
            <include>ViewSlideForJumpBar</include>
            <control type="panel" id="52">
                <visible>$EXP[Exp_View_52]</visible>
                <top>PosterPad</top>
                <left>SidePad</left>
                <right>70</right>
                <height>650</height>
                <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                <onright>1626</onright>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>1626</pagecontrol>
                <orientation>vertical</orientation>
                <viewtype label="537">list</viewtype>
                <include>ScrolltimeViewsList</include>
                <itemlayout height="130">
                    <include>View_52_BigList_ItemLayout</include>
                </itemlayout>
                <focusedlayout height="130">
                    <include>View_52_BigList_FocusLayout</include>
                </focusedlayout>
            </control>
            <control type="group">
                <control type="scrollbar" id="1626">
                    <include content="scrollbar_vertical">
                        <param name="scrollid" value="1626"/>
                    </include>
                </control>
            </control>
        </control>
    </include>

    <include name="View_52_BigList_DoublePane">
        <description>List View (id=52)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(52)</visible>
            <include>ViewSlideForJumpBar</include>
            <control type="panel" id="52">
                <visible>$EXP[Exp_View_52]</visible>
                <top>PosterPad</top>
                <left>SidePad</left>
                <width>1770</width>
                <height>650</height>
                <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                <onright>1625</onright>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>1625</pagecontrol>
                <orientation>vertical</orientation>
                <viewtype label="537">list</viewtype>
                <include>ScrolltimeViewsList</include>
                <itemlayout height="130" width="884.5">
                    <control type="image">
                        <left>1</left>
                        <top>1</top>
                        <right>9</right>
                        <height>120</height>
                        <texture border="5" diffuse="diffuse/pvrinfo.png" colordiffuse="Dark4">common/box.png</texture>
                    </control>
                    <include>View_52_BigList_ItemLayout</include>
                    <control type="image">
                        <left>0</left>
                        <right>9</right>
                        <top>0</top>
                        <bottom>9</bottom>
                        <texture border="4" colordiffuse="Box2" infill="false">common/box21.png</texture>
                        <visible>Skin.HasSetting(global.showborders)</visible>
                    </control>
                </itemlayout>
                <focusedlayout height="130" width="884.5">
                    <control type="image">
                        <left>1</left>
                        <top>1</top>
                        <right>9</right>
                        <height>120</height>
                        <texture border="5" diffuse="diffuse/pvrinfo.png" colordiffuse="Dark4">common/box.png</texture>
                    </control>
                    <include>View_52_BigList_FocusLayout</include>
                    <control type="image">
                        <left>0</left>
                        <right>9</right>
                        <top>0</top>
                        <bottom>9</bottom>
                        <texture border="4" colordiffuse="Box2" infill="false">common/box21.png</texture>
                        <visible>Skin.HasSetting(global.showborders)</visible>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1625">
                <include content="scrollbar_vertical">
                    <param name="scrollid" value="1625"/>
                </include>
            </control>
        </control>
    </include>

    <include name="View_52_BigList_ItemLayout">
    	<include>View_52_Thumbnail_Image</include>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>40</right>
            <height>100</height>
            <aligny>center</aligny>
            <font>SmallBold</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>40</right>
            <align>right</align>
            <height>100</height>
            <aligny>center</aligny>
            <font>Small</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$INFO[ListItem.Label2]</label>
            <visible>Skin.HasSetting(hide.markers) | ![Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(musicvideos) | Container.Content(videos)  | Container.Content(files)]</visible>
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>100</right>
            <align>right</align>
            <height>100</height>
            <aligny>center</aligny>
            <font>Small</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$INFO[ListItem.Label2]</label>
            <visible>!Skin.HasSetting(hide.markers) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(musicvideos) | Container.Content(videos) | Container.Content(files)]</visible>
        </control>
        <control type="label">
            <align>right</align>
            <aligny>center</aligny>
            <top>27</top>
            <width>64</width>
            <centerright>75</centerright>
            <height>68</height>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <font>WatchedIcon</font>
            <label>$VAR[LabelPercentWatched]</label>
            <visible>!String.IsEqual(ListItem.Label,..)</visible>
        </control>
    </include>

