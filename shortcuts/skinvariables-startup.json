{
	"infolabels": {
		"StartupWindow": "System.StartupWindow",
		"StartupPlaylist": "Skin.String(StartupPlaylist)"
	},
	"actions": [
		{
			"rules": [
				"String.IsEmpty(Window(home).Property(SkinSplashStarted))",
				"{StartupPlaylist}!="
			],
			"value": [
				"SetProperty(SkinSplashStarted,1,home)",
				"PlayMedia(\"{StartupPlaylist}\",1)",
				"route=run_executebuiltin=special://skin/shortcuts/skinvariables-startup.json&use_rules=True"
			]
		},
		{
			"rules": [
				"String.IsEmpty(Window(home).Property(SkinSplashStarted))",
				"{StartupPlaylist}=="
			],
			"value": [
				"SetProperty(SkinSplashStarted,1,home)",
				"sleep=2",
				"route=run_executebuiltin=special://skin/shortcuts/skinvariables-startup.json&use_rules=True"
			]
		},
		{
			"rules": [
				"{StartupPlaylist}==||!Player.HasMedia||!System.HasAlarm(SplashTimeOut)",
				"!Window.IsVisible(DialogConfirm.xml)"
			],
			"value": [
				"ReplaceWindow({StartupWindow})"
			]
		},
        "sleep=0.5",
        "RunScript(script.skinvariables,run_executebuiltin=special://skin/shortcuts/skinvariables-startup.json,use_rules=True)"
	]
}